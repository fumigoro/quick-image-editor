{
    "defaults": {
        //加工後の保存先のパス
        "path": "",
        //保存ファイル名(空白にすると今日の日付が入る)
        //拡張子は不要
        "fileName": "",
        //保存する画像のフォーマット
        //jpeg,pngから選択
        "format": "png",
        //画像のリサイズに関する設定
        "size": {
            //プリセットとして用意するサイズ
            //最大2つまで。それ以上用意した場合最初の2つのみ読み込まれる
            "presets": [
                {
                    "width": 1920,
                    "hight": 1080
                },
                {
                    "width": 960,
                    "hight": 540
                }
            ],
            //画像のサイズを変更するかどうか
            //falseにした場合これ以外のパラメーターは無視される
            "resize": false,
            //縦横比を固定するかどうか
            //trueにした場合は幅を元に高さが自動計算され、以下で設定する高さは無視される
            "fixAspectRatio": true,
            //画像の幅
            "width": 230,
            //高さ
            "hight": 200
        }
    },
    //前回使用したときのパラメータが以下に保存される。
    //「最後に使用した設定を読み込み」の操作で読み込まれる
    "recent": {
        //加工後の保存先のパス
        "path": "",
        //保存ファイル名(空白にすると今日の日付が入る)
        //拡張子は不要
        "fileName": "",
        //保存する画像のフォーマット
        //jpeg,pngから選択
        "format": "png",
        //画像のリサイズに関する設定
        "size": {
            //プリセットとして用意するサイズ
            //最大2つまで。それ以上用意した場合最初の2つのみ読み込まれる
            "size-presets": [
                {
                    "width": 1920,
                    "hight": 1080
                },
                {
                    "width": 960,
                    "hight": 540
                }
            ],
            //画像のサイズを変更するかどうか
            //falseにした場合これ以外のパラメーターは無視される
            "resize": false,
            //縦横比を固定するかどうか
            //trueにした場合は幅を元に高さが自動計算され、以下で設定する高さは無視される
            "fixAspectRatio": true,
            //画像の幅
            "width": 230,
            //高さ
            "hight": 200
        }
    }
}